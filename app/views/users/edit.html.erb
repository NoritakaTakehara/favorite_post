<div class = "all-body">
  <div class = main>
    <h2>編集</h2>
    <%= form_for(current_user) do |f| %>
      <div class="form-group">
        <%= f.label :nickname, "ニックネーム",class:"label-name" %><br />
        <%= f.text_field :nickname, autofocus: true, class:"form-control",autocomplete: "nickname" %>
      </div>

      <div class="form-group">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control",autocomplete: "email" %>
      </div>

      <div class="form-group">
        <%= f.label :avatar, "アバター画像" %><br />
        <%= f.file_field :avatar, autofocus: true, autocomplete: "avatar",class:"file-filed" %>
      </div>
        <%= f.submit "編集する", class:"new-registration-btn" %>
    <% end %>
  </div>
</div>
